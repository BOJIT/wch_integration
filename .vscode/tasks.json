{
    "version": "2.0.0",
    "inputs": [
        {
            "type": "pickString",
            "id": "board",
            "description": "Zephyr target board",
            "options": [
                "ch32v307v_evt_r1/ch32v307/ram_96k",
                "ch32v305fbp6_evt",
                "nano_ch32v317",
                "bluepill_ch32v203",
                "ch32v003f4p6_dev_board",
            ],
            "default": "ch32v307v_evt_r1/ch32v307/ram_96k"
        },
        {
            "type": "pickString",
            "id": "app",
            "description": "Zephyr target application",
            "options": [
                "barebones",
                "ethernet",
                "usb_cdc",
            ],
            "default": "usb_cdc"
        },
    ],
    "tasks": [
        {
            "label": "West Clean Build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "source ${workspaceFolder}/.venv/bin/activate && rm -rf ./build && west build -b ${input:board} ${input:app} -- -DBOARD_ROOT=../../",
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${workspaceFolder}/samples",
                "statusbar": {
                    "label": "$(wand) Clean Build"
                }
            }
        },
        {
            "label": "West Build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "source ${workspaceFolder}/.venv/bin/activate && west build",
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${workspaceFolder}/samples",
                "statusbar": {
                    "label": "$(beaker) Build Project"
                }
            }
        },
        {
            "label": "West Flash (WCH)",
            "type": "shell",
            "command": "wlink --chip CH32V30X flash --address 0x08000000 ./build/zephyr/zephyr.bin",
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": [
                "West Build"
            ],
            "options": {
                "cwd": "${workspaceFolder}/samples",
                "statusbar": {
                    "label": "$(arrow-right) Flash WCH Project"
                }
            }
        },
        {
            "label": "West Flash",
            "type": "shell",
            "command": "source ${workspaceFolder}/.venv/bin/activate && west flash",
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": [
                "West Build"
            ],
            "options": {
                "cwd": "${workspaceFolder}/samples",
                "statusbar": {
                    "label": "$(arrow-right) Flash Project"
                }
            }
        },
        {
            "label": "Start OpenOCD",
            "type": "shell",
            "command": "openocd_wch -f ${workspaceFolder}/boards/wch/ch32v307_evt_r1/support/openocd.cfg",
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${workspaceFolder}/samples",
                "statusbar": {
                    "label": "$(bug) Start OpenOCD"
                }
            }
        }
    ]
}
